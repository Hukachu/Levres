@model IEnumerable<Levres.Models.Oprema>

@{
    ViewData["Title"] = "PregledOpremeView";
}

<div class="w-75 text-center m-auto">
    <h1 class="archivo-h1 mt-3">Zamjenski dijelovi</h1>
</div>

<style>
    .filter-container {
        border: 2px solid #ddd;
        background-color: ghostwhite;
        box-shadow: 0px 4px 7px 0px rgba(0,0,0,0.57);
        border-radius: 15px;
        padding: 20px;
    }

    .car-card-a {
        text-decoration: none;
        color: inherit;
    }

    .car-card {
        text-decoration: none;
        color: inherit;
        box-shadow: 0px 4px 7px 0px rgba(0,0,0,0.57);
        border: 1px solid #ddd;
        background-color: ghostwhite;
        border-radius: 15px;
        overflow: hidden;
        margin-bottom: 20px;
    }

    .car-image-cont {
        width: 100%;
        display: flex;
        height: 15em;
        background-color: #cacaca;
        overflow: hidden;
        align-items: center;
        justify-content: center;
    }

        .car-image-cont img {
            height: 100%;
            margin: 0 auto;
        }

    .car-card-body {
        text-decoration: none;
        color: inherit;
        padding: .5em;
    }

    .car-card-a:hover {
        color: gray;
    }

    .car-card-body p {
        text-decoration: none;
        color: inherit;
    }

    .car-card-body h5 {
        text-decoration: none;
        color: inherit;
    }

    .car-card-body h4 {
        text-decoration: none;
        color: inherit;
    }
</style>
</style>

<div class="w-100 m-auto">
    <div class="container mt-5">
        <div class="row">
            <!-- Filters -->
            <div class="col-md-3">
                <div class="filter-container">
                <h5 class="archivo-medium fs-2">Pretraga</h5>
                <form asp-action="PregledOpremeView" method="get">
                    <div class="form-group">
                        <label for="pretraga">pretraga:</label>
                        <input type="text" class="form-control" name="pretraga" placeholder="Traži" value="@ViewData["Pretraga"]" />
                    </div>
                    <div class="form-group">
                        <label for="model">MODEL:</label>
                        @Html.DropDownList("model", new SelectList(Enum.GetValues(typeof(Model)).Cast<Model>()), "Izaberi", new { @class = "form-control" })
                    </div>                   
                    <button type="submit" value="PregledOpremeView" class="btn btn-dark py-2 px-3 mt-2">Pretraži</button>
                </form>
        </div>
    </div>

            <!-- Car Listings -->
            <div class="col-md-9">
                <div class="row">
                    @foreach (var oprema in Model)
                    {
                        <div class="col-md-4">
                           
                                <div class="car-card">
                                    <div class="car-image-cont">
                                        <img src="~/images/parts.webp">
                                    </div>
                                    <div class="car-card-body">
                                        <h5 class="car-card-title">@oprema.nazivDijela</h5>

                                        <p>Model: @oprema.model</p>
                                        <p>Količina: @oprema.kolicina</p>
                                        <p>Cijena: @oprema.cijena KM</p>

                                    </div>
                                </div>
                                
                        </div>
                       
                    }
                </div>
            </div>
        </div>
    </div>
</div>